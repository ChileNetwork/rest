{% extends "layout.twig" %}

{% block content %}
    <h1>Login!</h1>

    {% if error %}
        {{ include('_validationErrors.twig', {
            'errors': [error]
        }) }}
    {% endif %}

    <div class="row">
        <form class="bs-example form-horizontal" action="{{ path('user_login_check') }}" method="post">
            <fieldset>
                <div class="form-group">
                    <label for="form-email" class="col-lg-2 control-label">Email</label>
                    <div class="col-lg-10">
                        <input type="text" class="form-control" id="form-email" name="_username" placeholder="foo@example.com" value="{{ last_username }}" />
                    </div>
                </div>
                <div class="form-group">
                    <label for="form-password" class="col-lg-2 control-label">Password</label>
                    <div class="col-lg-10">
                        <input type="password" class="form-control" id="form-password" name="_password" />
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-lg-10 col-lg-offset-2">
                        <button type="submit" class="btn btn-primary">Login!</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>

{% endblock %}
