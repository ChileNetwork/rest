{# Included above forms to print errors easily #}
{% macro print_errors(errors) %}

    {% if errors is not empty %}
        <div class="row">
            <div class="col-lg-12">
                <div class="alert alert-dismissable alert-danger">
                    {% for error in errors %}
                        <p>{{ error }}</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    {% endif %}

{% endmacro %}

{% macro form_field(type, name, label, value, placeholder) %}
    <div class="form-group">
        <label for="form-{{ name }}" class="col-lg-2 control-label">{{ label }}</label>
        <div class="col-lg-10">
            <input type="{{ type }}" class="form-control" id="form-{{ name }}" name="{{ name }}" placeholder="{{ placeholder }}" value="{{ value }}" />
        </div>
    </div>
{% endmacro %}