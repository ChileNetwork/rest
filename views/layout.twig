<!DOCTYPE html>
<!--[if lt IE 7]>      <html class="no-js lt-ie9 lt-ie8 lt-ie7"> <![endif]-->
<!--[if IE 7]>         <html class="no-js lt-ie9 lt-ie8"> <![endif]-->
<!--[if IE 8]>         <html class="no-js lt-ie9"> <![endif]-->
<!--[if gt IE 8]><!--> <html class="no-js"> <!--<![endif]-->
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title></title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width">

    <!-- Bootstrap core CSS -->
    <link href="{{ app.request.basePath }}/css/bootstrap.css" rel="stylesheet" />

    <!-- Add custom CSS here -->
    <link rel="stylesheet" href="{{ app.request.basePath }}/css/sb-admin.css">
    <link rel="stylesheet" href="{{ app.request.basePath }}/font-awesome/css/font-awesome.min.css">
    <!-- Page Specific CSS -->
    <link rel="stylesheet" href="{{ app.request.basePath }}/css/rest.css">
</head>
<body>
    <!--[if lt IE 7]>
    <p class="chromeframe">You are using an outdated browser. <a href="http://browsehappy.com/">Upgrade your browser today</a> or <a href="http://www.google.com/chromeframe/?redirect=true">install Google Chrome Frame</a> to better experience this site.</p>
    <![endif]-->

    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <p class="navbar-text navbar-right">Battle Projects!</p>
                <a href="{{ path('homepage') }}" class="navbar-brand">Code Battles</a>
            </div>
            <div class="navbar-collapse collapse" id="navbar-main">
                <ul class="nav navbar-nav navbar-right">
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <li class="dropdown">
                            <a class="dropdown-toggle"
                               data-toggle="dropdown" href="#">
                                User Info <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>
                                    {% set user = app.security.token.user %}
                                    <table class="table table-striped user-information">
                                        <tbody>
                                        <tr>
                                            <th>Email</th>
                                            <td>{{ user.email }}</td>
                                        </tr>
                                        <tr>
                                            <th>Username</th>
                                            <td>{{ user.username }}</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </li>
                            </ul>
                        </li>
                        <li>
                            <a href="{{ path('user_logout') }}">Logout</a>
                        </li>
                    {% else %}
                        <li><a href="{{ path('user_register') }}">Register</a>
                        </li>
                        <li><a href="{{ path('user_login') }}">Login</a>
                        </li>
                    {% endif %}
                    <li><a href="http://builtwithbootstrap.com/"
                           target="_blank">Built With Bootstrap</a></li>
                    <li><a href="http://startbootstrap.com/sb-admin"
                           target="_blank">Start Bootstrap</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        {% block content %}
        {% endblock %}
    </div>

    {% block javascripts %}
        <script src="http://code.jquery.com/jquery-2.0.3.min.js"></script>
        <script src="{{ app.request.basePath }}/js/bootstrap.min.js"></script>
    {% endblock %}
</body>
</html>
