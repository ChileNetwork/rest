{% extends "layout.twig" %}
{% import '_macros.twig' as macros %}

{% block content %}
    <h1>Choose a programmer</h1>

    <ul class="programmers-list">
        {% for programmer in programmers %}
            <li>
                <a href="{{ path('programmer_show', {'nickname': programmer.nickname}) }}">{{ programmer.nickname }}</a>
            </li>
        {% endfor %}
    </ul>
    <a class="cancel-link" href="{{ path('homepage') }}">Cancel Battle</a>


{% endblock %}
